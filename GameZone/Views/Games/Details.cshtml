@model Game
@{
	ViewData["Title"] = Model.Name;
}

<div class="card text-white bg-dark border-light rounded-4 mt-5 overflow-hidden">
    <div class="card-body p-0">
        <div class="row">
            <div class="col-md-8 px-4 py-3 d-flex flex-column justify-content-between">
                <div>
                    <h1>@Model.Name</h1>
                    <span class="badge rounded-pill bg-primary fs-5 mb-3">@Model.Category?.Name</span>
                    <p class="fs-4">@Model.Description</p>
                </div>
                <div>
                    @foreach (var device in Model.GameDevices)
                    {
                        <i class="@device.Device.Icon me-2 fs-3"></i>
                    }
                </div>
            </div>
            <div class="col-md-4">
                <img class="w-100 h-100" src="@($"{FileSettings.ImagesPath}/{Model.Cover}")" alt="@Model.Name" />
            </div>
        </div>
    </div>
</div>
